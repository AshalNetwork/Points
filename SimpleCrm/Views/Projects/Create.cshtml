@model SimpleCrm.VM.CreateProjectDto
@{
    ViewData["Title"] = "Create Project";
}

<h2 class="text-center m-5">Create New Project</h2>
<form asp-action="Create" method="post" class="w-75 m-auto">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter The Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectManger"></label>
        <input asp-for="ProjectManger" class="form-control" placeholder="Enter The Project Manger Name" />
        <span asp-validation-for="ProjectManger" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="StartedAt"></label>
        <input asp-for="StartedAt" type="date" class="form-control"/>
        <span asp-validation-for="StartedAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea id="description" asp-for="Description" class="form-control" placeholder="Enter The Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Objectives"></label>
        <textarea id="objectives" asp-for="Objectives" class="form-control" placeholder="Enter The Objectives"></textarea>
        <span asp-validation-for="Objectives" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-1">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor.create(document.querySelector('#description'), {
        toolbar: ['bold', 'italic', 'underline', 'bulletedList', 'numberedList', 'blockQuote'],
        language: 'en' // Arabic language support
    });
    ClassicEditor.create(document.querySelector('#objectives'), {
        toolbar: ['bold', 'italic', 'underline', 'bulletedList', 'numberedList', 'blockQuote'],
        language: 'en' // Arabic language support
    });
</script>