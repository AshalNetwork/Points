@model SimpleCrm.VM.ForgotPasswordViewModel

<h2 class="text-center mt-5">Forgot your password?</h2>

<form asp-action="ForgotPassword" method="post" class="w-75 m-auto">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Send Email</button>
</form>
