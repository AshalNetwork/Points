@model SimpleCrm.VM.ResetPasswordViewModel

<h2 class="text-center mt-5">Reset your password</h2>

<form asp-action="ResetPassword" method="post" class="w-75 m-auto">
    <input type="hidden" asp-for="Code" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="password-container">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control password" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="password-container">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control password" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Reset Password</button>
</form>
