@model SimpleCrm.VM.ChangePasswordVm
@{
    ViewData["Title"] = "Change Password";
}

<h2 class="text-center">Change Your Password</h2>
<form asp-action="ChangePassword" method="post" class="w-75 m-auto">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="password-container">
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword" class="form-control password" placeholder="Enter Old Password" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="password-container">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control password" placeholder="Enter New Password" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="password-container">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control password" placeholder="Enter New Password Again" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-1">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
