@model SimpleCrm.VM.CreateTaskVM
@{
    ViewData["Title"] = "Create Task";
}

<h2 class="text-center m-5">Create New Task</h2>
<form asp-action="Create" method="post" class="w-75 m-auto">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter Task Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter The Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="Model.StatusList" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId" asp-items="Model.UsersList" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="StartAt"></label>
        <input asp-for="StartAt" type="datetime-local" class="form-control" min="@Model.MinDate" />
        <span asp-validation-for="StartAt" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EndAt"></label>
        <input asp-for="EndAt" type="datetime-local" class="form-control" min="@Model.MinDate" />
        <span asp-validation-for="EndAt" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-primary mt-1">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
