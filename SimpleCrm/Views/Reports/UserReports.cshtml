@model IEnumerable<SimpleCrm.VM.UserReportsVM>
@{
    ViewData["Title"] = $"{ViewBag.Name} Reports";
}
<div>
    <h3 class="text-center m-5">@($"{ViewBag.Name} Reports") </h3>
    <div class="row mb-2">
        <div class="col-md-6 col-sm-12">
            <div class="btn-group">
                <a class="btn btn-success" aria-current="page" asp-action="Create"><i class="bi bi-plus"></i>Create New Report</a>
            </div>
        </div>
        <div class="col-md-2 col-sm-0"></div>

    </div>
    <table class="table table-bordered table-hover table-responsive">
        <thead class="text-center bg-black text-white">
            <tr>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td style="word-wrap:anywhere">@Html.Raw(task.Description)</td>
                    <td>@task.Date</td>
                </tr>
            }
        </tbody>
    </table>

</div>


