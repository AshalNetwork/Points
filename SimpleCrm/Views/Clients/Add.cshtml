@using SimpleCrm.Contexts
@model SimpleCrm.VM.AddClientDto
@inject CrmDbContext DbContext
@{
    ViewData["Title"] = "Add Client";
}


<h2 class="text-center">Add Client</h2>
<div class="w-75 m-auto">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p class="text-danger">@error.ErrorMessage</p>
    }
    <form asp-action="Add" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

        <div class="form-group">
            <label asp-for="ReasonId" class="control-label">Reason</label>
            <select id="reasonDropdown"  asp-for="ReasonId" class="form-control">
                <option value="">-- Select a reason --</option>
                @foreach (var reason in DbContext.CommingReasons.ToList().OrderBy(z=>z.Reason))
                {
                    <option value="@reason.Id">@reason.Reason</option>
                }
            </select>
            <span asp-validation-for="ReasonId" class="text-danger"></span>
        </div>
        <div id="customReasonInput" class="form-group" style="display:none;">
            <label asp-for="CustomReason" class="control-label"></label>
            <input asp-for="CustomReason" id="CustomReason" class="form-control" />
            <span asp-validation-for="CustomReason" class="text-danger"></span>
        </div>
    <div class="form-group m-1">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
    <div class="ml-2">
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    document.addEventListener('DOMContentLoaded', function () {

        const reasonDropdown = document.getElementById('reasonDropdown');
        const customReasonInput = document.getElementById('customReasonInput');

        reasonDropdown.addEventListener('change', function () {
            const selectedText = reasonDropdown.options[reasonDropdown.selectedIndex].text;

            if (selectedText === 'Custom') {
                customReasonInput.style.display = 'block'; // Show input field
            } else {
                customReasonInput.style.display = 'none'; // Hide input field
            }
        });
    });
</script>
