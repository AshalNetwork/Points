@model SimpleCrm.Models.Clients
@using SimpleCrm.Contexts
@inject PointsDbContext DbContext

@{
    ViewData["Title"] = "Edit Client";
}

<h2 class="text-center">Edit Client</h2>
<div class="w-75 m-auto">
    <form asp-action="Edit" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input asp-for="Id" class="form-control" hidden/>
        <div class="form-group">
            <label asp-for="ClientName" class="control-label"></label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientPhone" class="control-label"></label>
            <input asp-for="ClientPhone" class="form-control" />
            <span asp-validation-for="ClientPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CommingReasonId" class="control-label">Reason</label>
            <select id="reasonDropdown" asp-for="CommingReasonId" class="form-control">
                <option value="">-- Select a reason --</option>
                @foreach (var reason in DbContext.CommingReasons.ToList().OrderBy(z => z.Reason))
                {
                    <option value="@reason.Id">@reason.Reason</option>
                }
            </select>
            <span asp-validation-for="CommingReasonId" class="text-danger"></span>
        </div>
        <div id="customReasonInput" class="form-group" style="display:none;">
            <label asp-for="CustomReason" class="control-label"></label>
            <input asp-for="CustomReason" id="CustomReason" class="form-control" />
            <span asp-validation-for="CustomReason" class="text-danger"></span>
        </div>
        <div class="form-group m-1">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <div class="ml-2">
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    document.addEventListener('DOMContentLoaded', function () {

        const reasonDropdown = document.getElementById('reasonDropdown');
        const customReasonInput = document.getElementById('customReasonInput');
        const selectedText = reasonDropdown.options[reasonDropdown.selectedIndex].text;

        if (selectedText === 'Custom') {
            customReasonInput.style.display = 'block'; // Show input field
        } else {
            customReasonInput.style.display = 'none'; // Hide input field
        }
        reasonDropdown.addEventListener('change', function () {
            const selectedText = reasonDropdown.options[reasonDropdown.selectedIndex].text;

            if (selectedText === 'Custom') {
                customReasonInput.style.display = 'block'; // Show input field
            } else {
                customReasonInput.style.display = 'none'; // Hide input field
            }
        });
    });
</script>
