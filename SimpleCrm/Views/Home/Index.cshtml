@model SimpleCrm.VM.StaticticsVM
@{
    ViewData["Title"] = "Home";
}

<style>
    .card-icon {
        font-size: 2rem;
        color: #17a2b8; /* Customize icon color */
    }

    .card-number {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .card {
        text-align: center;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional box shadow */
        transition: transform 0.3s ease; /* Smooth hover effect */
    }

        .card:hover {
            transform: translateY(-5px); /* Move card up on hover */
        }
</style>
<div class="container py-5">
    <h2 class="text-center mb-5">Home</h2>

    <div class="row g-4">
        <!-- Card 1 -->
        <div class="col-md-3 col-sm-6">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-person card-icon"></i> Users
                        <div class="card-number">@Model.UsersCount</div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Card 2 -->
        <div class="col-md-3 col-sm-6">
            <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Index">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-people card-icon"></i> Active Clients
                        <div class="card-number">@Model.ActiveClients</div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Card 3 -->
        <div class="col-md-3 col-sm-6">
            <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Cancelled">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-people card-icon"></i> Deleted Clients
                        <div class="card-number">@Model.DeletedClients</div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Card 4 -->
        <div class="col-md-3 col-sm-6">
            <a class="nav-link text-dark" asp-area="" asp-controller="FollowedClients" asp-action="Index">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-arrow-repeat card-icon"></i> Forwards
                        <div class="card-number">@Model.Forwards</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
