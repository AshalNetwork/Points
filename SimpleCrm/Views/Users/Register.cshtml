@model SimpleCrm.VM.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center m-5">Register New User</h2>
<form asp-action="Register" method="post" class="w-75 m-auto">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Model.RolesList" class="form-control"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Your Phone"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="password-container">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control password" placeholder="Enter Password"/>
        <i class="bi bi-eye-fill login-eye togglePassword" ></i>
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="password-container">

        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control password" placeholder="Enter Password Again" />
        <i class="bi bi-eye-fill login-eye togglePassword"></i>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>   
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-1">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
